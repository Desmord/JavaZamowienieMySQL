   <children>
      <VBox prefHeight="580.0" prefWidth="900.0">
         <children>
            <Label prefWidth="100.0" text="Wyszukaj po:">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="400.0" top="40.0" />
               </VBox.margin>
            </Label>
            <CheckBox fx:id="idCheckBox" mnemonicParsing="false" prefWidth="100.0" text="Id">
               <VBox.margin>
                  <Insets left="375.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </CheckBox>
            <CheckBox fx:id="nameCheckBox" mnemonicParsing="false" text="Nazwa">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="375.0" top="15.0" />
               </VBox.margin>
            </CheckBox>
            <TextField fx:id="searchTextField" prefWidth="250.0">
               <VBox.margin>
                  <Insets left="250.0" right="250.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="searchButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Wyszukaj">
               <VBox.margin>
                  <Insets bottom="20.0" left="400.0" top="20.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="infoLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="100.0" prefWidth="400.0" textFill="#c91a1a" wrapText="true">
               <VBox.margin>
                  <Insets left="250.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
